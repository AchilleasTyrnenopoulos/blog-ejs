<%- include('./partials/header'); -%> 

<h1>Home</h1>

<p><%= homeContent %></p>

<% if(posts.length > 0) { %>
<%     posts.forEach(function(post) { %>
         <h1> <%= post.title %></h1> 
         <% if(post.body.length > 100) { %>
            <p> <%= post.body.substring(0, 100) %>...</p><a href="/posts/<%= post.title %>">Read more</a>
         <% } else { %>
            <p> <%= post.body%></p>
         <% } %>
<%     }) %>
<% } %>
<%- include('./partials/footer'); -%> 